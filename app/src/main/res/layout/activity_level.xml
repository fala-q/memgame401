<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9C27B0"
    android:backgroundTint="#DAB5E0"
    tools:context=".Level">


    <Button
        android:id="@+id/lvl1btn"
        android:layout_width="196dp"
        android:layout_height="65dp"
        android:layout_marginStart="107dp"
        android:layout_marginTop="132dp"
        android:layout_marginEnd="108dp"
        android:layout_marginBottom="76dp"
        android:clickable="true"
        android:text="@string/level_1"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/lvl2btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/lvl2btn"
        android:layout_width="196dp"
        android:layout_height="65dp"
        android:layout_marginStart="107dp"
        android:layout_marginEnd="108dp"
        android:layout_marginBottom="76dp"
        android:clickable="true"
        android:text="@string/level_2"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/lvl3btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/lvl3btn"
        android:layout_width="196dp"
        android:layout_height="65dp"
        android:layout_marginStart="107dp"
        android:layout_marginEnd="108dp"
        android:layout_marginBottom="240dp"
        android:clickable="true"
        android:text="@string/level_3"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>